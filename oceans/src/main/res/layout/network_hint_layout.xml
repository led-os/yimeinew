<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlNoNet"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@color/no_net_bg">

    <ImageView
        android:id="@+id/imgV"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/no_net_warning" />

    <TextView
        android:id="@+id/tvNoNet"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/imgV"
        android:gravity="center_vertical"
        android:text="@string/no_network_hint"
        android:textColor="@color/no_net_text"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="11dp"
        android:layout_height="13dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/no_net_arrows" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical"
        tools:context=".ui.mine.activity.popularize.AdvPromoteActivity">

        <com.nevermore.oceans.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="@string/Advertising_space_promotion" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:background="@color/white"
            android:drawableLeft="@drawable/home_dingwei"
            android:drawablePadding="@dimen/dp8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp10"
            android:text=" "
            android:textColor="#FF333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp15"
            android:text="普通区"
            android:textColor="@color/color_6"
            android:textSize="14sp" />

        <android.support.design.widget.CustomTabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp46"
            android:background="@android:color/white"
            android:paddingBottom="@dimen/dp3"
            app:tabIndicator="@color/colorPrimary"
            app:tabIndicatorHeight="@dimen/dp2"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/color_3" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp15"
            android:text="VIP区"
            android:textColor="@color/color_6"
            android:textSize="14sp" />

        <android.support.design.widget.CustomTabLayout
            android:id="@+id/tabLayout_vip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp46"
            android:background="@android:color/white"
            android:paddingBottom="@dimen/dp3"
            app:tabIndicator="@color/colorPrimary"
            app:tabIndicatorHeight="@dimen/dp2"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/color_3" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_vip"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:background="@color/white" />
    </LinearLayout>
</layout>
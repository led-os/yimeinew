<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bean"
            type="com.chengzi.app.ui.mine.bean.SpreadsOrderBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zhifuchenggong_beijing"
        android:orientation="vertical"
        tools:context=".ui.pay.activity.PaySuccessActivity">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0"
            android:layout_weight="200" />

        <ImageView
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp70"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/zhifuchenggong" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp15"
            android:text="支付成功"
            android:textColor="#FF333333"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0"
            android:layout_weight="45" />

        <com.nevermore.oceans.widget.EnterLayout
            android:id="@+id/el_spreads_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:gravity="center"
            android:paddingLeft="@dimen/dp40"
            android:paddingRight="@dimen/dp25"
            app:hideArrow="true"
            app:textColor="#333333"
            app:textSize="14"
            app:textSubject="订单编号"
            tools:text_content="201901227Y67J" />

        <com.nevermore.oceans.widget.EnterLayout
            android:id="@+id/el_goods_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:gravity="center"
            android:paddingLeft="@dimen/dp40"
            android:paddingRight="@dimen/dp25"
            android:visibility="gone"
            app:hideArrow="true"
            app:textColor="#333333"
            app:textSize="14"
            app:textSubject="商品名称"
            tools:text_content="365天包年" />

        <com.nevermore.oceans.widget.EnterLayout
            android:id="@+id/el_payment_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:gravity="center"
            android:paddingLeft="@dimen/dp40"
            android:paddingRight="@dimen/dp25"
            app:hideArrow="true"
            app:textColor="#333333"
            app:textSize="14"
            app:textSubject="购买方式"
            app:text_content="补差价" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:paddingRight="@dimen/dp40"
            android:visibility="gone">

            <com.nevermore.oceans.widget.EnterLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp30"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/dp40"
                app:hideArrow="true"
                app:textColor="#333333"
                app:textSize="14"
                app:textSubject="已选医生"
                app:text_content="张一凡 主治医师" />

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp10"
                android:layout_gravity="center"
                android:src="@drawable/vip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:paddingRight="@dimen/dp40"
            android:visibility="gone">

            <com.nevermore.oceans.widget.EnterLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp30"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/dp40"
                app:hideArrow="true"
                app:textColor="#333333"
                app:textSize="14"
                app:textSubject="已选咨询师"
                app:text_content="张一凡 高级咨询师" />

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp10"
                android:layout_gravity="center"
                android:src="@drawable/vip" />
        </LinearLayout>

        <com.nevermore.oceans.widget.EnterLayout
            android:id="@+id/el_spreads"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:gravity="center"
            android:paddingLeft="@dimen/dp40"
            android:paddingRight="@dimen/dp25"
            app:hideArrow="true"
            app:textColor="#333333"
            app:textSize="14"
            app:textSubject="支付金额"
            tools:text_content="¥6500" />

        <com.nevermore.oceans.widget.EnterLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:gravity="center"
            android:paddingLeft="@dimen/dp40"
            android:paddingRight="@dimen/dp25"
            android:visibility="gone"
            app:hideArrow="true"
            app:textColor="#333333"
            app:textSize="14"
            app:textSubject="支付方式"
            app:text_content="@string/alipay" />

        <com.nevermore.oceans.widget.EnterLayout
            android:id="@+id/el_create_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:gravity="center"
            android:paddingLeft="@dimen/dp40"
            android:paddingRight="@dimen/dp25"
            app:hideArrow="true"
            app:textColor="#333333"
            app:textSize="14"
            app:textSubject="支付时间"
            tools:text_content="2019年1月22日 15：22" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0"
            android:layout_weight="84" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="@dimen/dp15"
            android:background="@drawable/rect_btn_red_background"
            android:gravity="center"
            android:text="查看订单"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp" />
    </LinearLayout>
</layout>
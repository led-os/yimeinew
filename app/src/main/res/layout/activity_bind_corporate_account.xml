<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

        <variable
            name="dataBean"
            type="com.chengzi.app.ui.mine.bean.CoAccountBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical"
        tools:context=".ui.mine.activity.mywallet.BindCorporateAccountActivity">

        <com.nevermore.oceans.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="绑定对公账户" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/white"
            android:divider="@drawable/list_divider_left15_bg"
            android:orientation="vertical"
            android:showDividers="middle|end">

            <!--姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:text="单位名称"
                    android:textColor="#FF333333"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="输入单位名称"
                    android:maxLength="18"
                    android:paddingRight="@dimen/dp15"
                    android:text="@={dataBean.name}"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF999999"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--身份证号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:text="身份证号"
                    android:textColor="#FF333333"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="输入本人身份证号码"
                    android:maxLength="18"
                    android:paddingRight="@dimen/dp15"
                    android:text="@={dataBean.card_id}"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF999999"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--银行卡所属城市-->
            <com.nevermore.oceans.widget.EnterLayout
                android:id="@+id/el_choose_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:gravity="center_vertical"
                android:onClick="@{listener::onClick}"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                app:textColor="@color/color_3"
                app:textSubject="请选择城市"
                app:text_size="@dimen/sp15"
                tools:text_content="北京"
                android:visibility="gone"
                />

            <!--银行卡号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:text="银行卡号"
                    android:textColor="#FF333333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_card_no"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="输入银行卡号"
                    android:maxLength="19"
                    android:paddingRight="@dimen/dp15"
                    android:text="@={dataBean.bank_id}"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF999999"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </LinearLayout>


            <!--银行名称-->

            <com.nevermore.oceans.widget.EnterLayout
                android:id="@+id/el_choose_bank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:gravity="center_vertical"
                android:onClick="@{listener::onClick}"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                app:textColor="@color/color_3"
                app:textSubject="银行名称"
                app:text_size="@dimen/sp15"
                app:content="@{dataBean.bank_name}"
                />

            <!--开户支行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:text="开户支行"
                    android:textColor="#FF333333"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="输入开户支行"
                    android:maxLength="18"
                    android:paddingRight="@dimen/dp15"
                    android:text="@={dataBean.openingBranch}"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF999999"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:text="银行名称"
                    android:textColor="#FF333333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingRight="@dimen/dp15"
                    android:text="@={dataBean.bank_name}"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF999999"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--手机号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:text="手机号"
                    android:textColor="#FF333333"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="银行预留手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingRight="@dimen/dp15"
                    android:text="@={dataBean.tel}"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF999999"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--验证码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:text="验证码"
                    android:textColor="#FF333333"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="输入验证码"
                    android:inputType="number"
                    android:maxLength="8"
                    android:paddingRight="@dimen/dp15"
                    android:text="@={dataBean.m_code}"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF999999"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />

                <com.nevermore.oceans.widget.CountDownButton
                    android:id="@+id/cdb_get_code"
                    android:layout_width="@dimen/dp110"
                    android:layout_height="match_parent"
                    android:background="@color/colorRed"
                    android:gravity="center"
                    android:onClick="@{listener::onClick}"
                    android:text="获取验证码"
                    android:textColor="#FFFFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="@dimen/dp60"
            android:layout_marginRight="38dp"
            android:background="@drawable/rect_btn_red_background"
            android:gravity="center"
            android:onClick="@{listener::onClick}"
            android:text="确定"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp" />
    </LinearLayout>
</layout>
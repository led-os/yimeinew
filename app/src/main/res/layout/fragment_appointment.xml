<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp15"
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/left_red_white_square_bg"
                android:paddingLeft="@dimen/dp6"
                android:text="@string/available_time"
                android:textColor="#FF333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/btn_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/jiantou_hong"
                android:drawablePadding="@dimen/dp6"
                android:gravity="center_vertical"
                android:onClick="@{v -> listener.onClick(v)}"
                android:paddingLeft="@dimen/dp15"
                android:paddingTop="@dimen/dp10"
                android:paddingRight="@dimen/dp15"
                android:paddingBottom="@dimen/dp10"
                android:text="@string/check_out_the_next_two_weeks"
                android:textColor="#FFFF526A"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"
                android:textColor="#FF333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_today_am"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/appointment_selector"
                android:gravity="center"
                android:enabled="false"
                android:textColor="#FFFFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_today_pm"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:background="@drawable/appointment_selector"
                android:enabled="false"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tomorrow"
                android:textColor="#FF333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_tomorrow_am"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/appointment_selector"
                android:gravity="center"
                android:enabled="false"
                android:textColor="#FFFFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_tomorrow_pm"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:background="@drawable/appointment_selector"
                android:enabled="false"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/the_day_after_tomorrow"
                android:textColor="#FF333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_after_tomorrow_am"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/appointment_selector"
                android:gravity="center"
                android:enabled="false"
                android:textColor="#FFFFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_after_tomorrow_pm"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:background="@drawable/appointment_selector"
                android:enabled="false"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

</layout>
